---
import Layout from '../layouts/Layout.astro';
import Educacion from '../assets/Educacion.svg';
import Seguridad from '../assets/Seguridad.svg';
import Salud from '../assets/Salud.svg';
import Infraestructura from '../assets/Infraestructura.svg';
import Ciencia from '../assets/Ciencia.svg';
import Justicia from '../assets/Justicia.svg';
import Recreacion from '../assets/Recreacion.svg';
import Banco from '../assets/Banco.svg';
import TarjetaAutoridad from '../components/TarjetaAutoridad.astro';
import Particulas from '../components/Particulas.astro';
---

<Layout title="Autoridades" description="En esta página verás el funcionamiento de Pelee.">
    <Particulas
            count={10}
            brightness="bright"
            size="medium"
            speed="normal"
        />
    <h1 class="text-center p-10.5 text-[var(--primary)]">
        Cómo funciona Pelee?
    </h1>
    <br>
    <p>
        En Pelee existen una serie de autoridades que manejan las leyes dependiendo la prioridad necesaria.
    </p>
    <br>
    <div style="display: grid; gap: 20px; max-width: 1000px; margin: auto; padding: 0 20px;"
         class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">

        <TarjetaAutoridad
            icono={Educacion.src}
            titulo="Respubliko de Pelee"
            subtitulo="Eduka Aŭtoritato"
            descripcion="(Autoridad de Educación)"
            alt="Libro abierto con una estrella"
        />

        <TarjetaAutoridad
            icono={Seguridad.src}
            titulo="Respubliko de Pelee"
            subtitulo="Sekureco Aŭtoritato"
            descripcion="(Autoridad de Seguridad)"
            alt="Escudo con una estrella"
        />

        <TarjetaAutoridad
            icono={Salud.src}
            titulo="Respubliko de Pelee"
            subtitulo="Sano Aŭtoritato"
            descripcion="(Autoridad de Salud)"
            alt="Rectángulo redondo con una S y una estrella"
        />

        <TarjetaAutoridad
            icono={Infraestructura.src}
            titulo="Respubliko de Pelee"
            subtitulo="Infrastrukturo Aŭtoritato"
            descripcion="(Autoridad de Infraestructura)"
            alt="Círculo con una estrella"
        />
       
        <TarjetaAutoridad
            icono={Ciencia.src}
            titulo="Respubliko de Pelee"
            subtitulo="Scienco Aŭtoritato"
            descripcion="(Autoridad de Ciencia)"
            alt="Gráfico de barras con una estrella"
        />
       
        <TarjetaAutoridad
            icono={Justicia.src}
            titulo="Respubliko de Pelee"
            subtitulo="Justeco Aŭtoritato"
            descripcion="(Autoridad de Justicia)"
            alt="Anillo con una estrella"
        />

        <TarjetaAutoridad
            icono={Recreacion.src}
            titulo="Respubliko de Pelee"
            subtitulo="Rekreacio Aŭtoritato"
            descripcion="(Autoridad de Recreación)"
            alt="Tres estrellas juntas"
        />

        <TarjetaAutoridad
            icono={Banco.src}
            titulo="Respubliko de Pelee"
            subtitulo="Temsoj Aŭtoritato"
            descripcion="(Autoridad del Temsoj)"
            alt="Rectángulo redondo con una estrella y una flecha hacia arriba"
        />
    </div>
    <br>
</Layout>

