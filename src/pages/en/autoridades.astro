---
import { getTranslations } from '../../i18n/utils.js';
import Layout from '../../layouts/Layout.astro';
import Educacion from '../../assets/Educacion.svg';
import Seguridad from '../../assets/Seguridad.svg';
import Salud from '../../assets/Salud.svg';
import Infraestructura from '../../assets/Infraestructura.svg';
import Ciencia from '../../assets/Ciencia.svg';
import Justicia from '../../assets/Justicia.svg';
import Recreacion from '../../assets/Recreacion.svg';
import Banco from '../../assets/Banco.svg';
import TarjetaAutoridad from '../../components/TarjetaAutoridad.astro';
import Particulas from '../../components/Particulas.astro';

const currentLang = 'en';
const t = await getTranslations(currentLang);
---
<Layout 
    title={t.nav.autoridades} 
    description={t.autoridades.description}
>
    <Particulas
        count={10}
        brightness="bright"
        size="medium"
        speed="normal"
    />
    <h1 class="text-center p-10.5 text-[var(--primary)]">
        {t.autoridades.title}
    </h1>
    <br>
    <p>
        {t.autoridades.introText}
    </p>
    <br>
    <div style="display: grid; gap: 20px; max-width: 1000px; margin: auto; padding: 0 20px;"
         class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        <TarjetaAutoridad
            icono={Educacion.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.education.name}
            descripcion={t.autoridades.authorities.education.description}
            alt={t.autoridades.authorities.education.alt}
        />
        <TarjetaAutoridad
            icono={Seguridad.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.security.name}
            descripcion={t.autoridades.authorities.security.description}
            alt={t.autoridades.authorities.security.alt}
        />
        <TarjetaAutoridad
            icono={Salud.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.health.name}
            descripcion={t.autoridades.authorities.health.description}
            alt={t.autoridades.authorities.health.alt}
        />
        <TarjetaAutoridad
            icono={Infraestructura.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.infrastructure.name}
            descripcion={t.autoridades.authorities.infrastructure.description}
            alt={t.autoridades.authorities.infrastructure.alt}
        />
        <TarjetaAutoridad
            icono={Ciencia.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.science.name}
            descripcion={t.autoridades.authorities.science.description}
            alt={t.autoridades.authorities.science.alt}
        />
        <TarjetaAutoridad
            icono={Justicia.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.justice.name}
            descripcion={t.autoridades.authorities.justice.description}
            alt={t.autoridades.authorities.justice.alt}
        />
        <TarjetaAutoridad
            icono={Recreacion.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.recreation.name}
            descripcion={t.autoridades.authorities.recreation.description}
            alt={t.autoridades.authorities.recreation.alt}
        />
        <TarjetaAutoridad
            icono={Banco.src}
            titulo={t.autoridades.republic}
            subtitulo={t.autoridades.authorities.temsoj.name}
            descripcion={t.autoridades.authorities.temsoj.description}
            alt={t.autoridades.authorities.temsoj.alt}
        />
    </div>
    <br>
</Layout>
