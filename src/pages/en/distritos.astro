---
import { getTranslations } from '../../i18n/utils.js';
import Layout from '../../layouts/Layout.astro';
import FiltrosDistrito from '../../components/FiltrosDistrito.astro';
import distritos from '../../assets/distritos.png';
import Table from '../../components/table.astro';
import Particulas from '../../components/Particulas.astro';

const currentLang = 'en';
const t = await getTranslations(currentLang);
---
<Layout 
    title={t.nav.distritos} 
    description={t.distritos.description}
>
    <Particulas
        count={10}
        brightness="bright"
        size="medium"
        speed="normal"
    />
    <h1 class="text-center p-10.5 text-[var(--primary)]">
        {t.distritos.title}
    </h1>
    <div class="mt-4 ml-4 mr-4">
        <img src={distritos.src} alt={t.distritos.imageAlt} class="rounded-lg w-full border-2">
        <br>
        <!-- Componente de filtros -->
        <FiltrosDistrito />
        <!-- Componente de tabla -->
        <Table />
        <br>
    </div>
</Layout>