---
import { getTranslations } from '../i18n/utils.js';
import Layout from '../layouts/Layout.astro';
import Particulas from '../components/Particulas.astro';
import HistoriaComponent from '../components/Historia.astro';

const currentLang = 'es';
const t = await getTranslations(currentLang);
---
<Layout 
    title={t.nav.historia}
    description="En esta página conocerás la interesante historia de los distritos, las funciones del gobierno y sitios históricos."
>
    <Particulas
        count={10}
        brightness="bright"
        size="medium"
        speed="normal"
    />
   <!--HistoriaComponent />-->
</Layout>