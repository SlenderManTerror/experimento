---
import InicioInteractivo from '../components/InicioInteractivo.astro';
import Layout from '../layouts/Layout.astro';
import Particulas from '../components/Particulas.astro';
---

<Layout title="Inicio" description="Bienvenido a Pelee. En esta página conocerás este magnífico universo digital.">
    <!-- Background -->
    <div class="page-background">
        <div class="gradient-mesh"></div>
        <div class="dots-pattern"></div>
    </div>

    <Particulas
        count={10}
        brightness="bright"
        size="medium"
        speed="normal"
    />

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <div class="hero-badge">
                    <span>✨ La Ciudad Digital</span>
                </div>
                <h1 class="hero-title">
                    Bienvenido a <span class="accent">Pelee</span>
                </h1>
                <p class="hero-description">
                    Tu portal completo para explorar este asombroso mundo.
                    Accede a nuestra historia, información y conecta con todo lo que necesitas.
                </p>
                <div class="hero-actions">
                    <a href="#section-title" class="btn-primary hero-btn">
                        <span>Explorar ahora</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Cards Section -->
    <section class="main-section">
        <div class="container">
            <div class="section-header" id="section-title">
                <h5>Explora Pelee</h5>
                <p class="section-subtitle">Cuatro portales para descubrir todo sobre nuestra comunidad</p>
            </div>

            <div class="cards-grid">
                <!-- Historia Card -->
                <a href="/historia" class="main-card-link">
                    <article class="main-card" data-category="historia">
                        <div class="card-header">
                            <div class="card-icon">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    <path d="M6.5 2H20V22H6.5A2.5 2.5 0 0 1 4 19.5V4.5A2.5 2.5 0 0 1 6.5 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </div>
                            <div class="card-badge">Patrimonio</div>
                        </div>
                        <h3 class="card-title">Historia</h3>
                        <p class="card-description">
                            Descubre el rico patrimonio de Pelee a través de archivos históricos,
                            fotografías y testimonios que han marcado nuestra identidad.
                        </p>
                        <div class="card-stats">
                            <span>12,400 años documentados</span>
                        </div>
                    </article>
                </a>

                <!-- Distritos Card -->
                <a href="/distritos" class="main-card-link">
                    <article class="main-card" data-category="distritos">
                    <div class="card-header">
                        <div class="card-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M3 21H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M5 21V7L13 2L21 7V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M9 9V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M17 9V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <div class="card-badge">Urbano</div>
                    </div>
                    <h3 class="card-title">Distritos</h3>
                    <p class="card-description">
                        Explora las diferentes zonas que conforman Pelee. 
                        Cada distrito tiene su propia personalidad y servicios únicos.
                    </p>
                    <div class="card-stats">
                        <span>30 distritos disponibles</span>
                    </div>
                </article>
                </a>

                <!-- Mapa Card -->
                <a href="/mapa" class="main-card-link">
                <article class="main-card" data-category="mapa">
                    <div class="card-header">
                        <div class="card-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M21 10C21 17 12 23 12 23S3 17 3 10A9 9 0 1 1 21 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </div>
                        <div class="card-badge">Navegación</div>
                    </div>
                    <h3 class="card-title">Mapa</h3>
                    <p class="card-description">
                        Navega por Pelee con nuestro sistema de mapas interactivo. 
                        Encuentra ubicaciones y puntos de interés fácilmente.
                    </p>
                    <div class="card-stats">
                        <span>Mapa interactivo</span>
                    </div>
                </article>
                </a>

                <!-- Autoridades Card -->
                <a href="/autoridades" class="main-card-link">
                <article class="main-card" data-category="autoridades">
                    <div class="card-header">
                        <div class="card-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M12 22S8 18 8 13V6L12 2L16 6V13C16 18 12 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <div class="card-badge">Oficial</div>
                    </div>
                    <h3 class="card-title">Autoridades</h3>
                    <p class="card-description">
                        Accede a servicios gubernamentales y información oficial. 
                        Gestiona trámites y mantente informado sobre regulaciones.
                    </p>
                    <div class="card-stats">
                        <span>Servicios 24/7</span>
                    </div>
                </article>
                </a>
            </div>
        </div>
    </section>
    <!-- Componente de interacciones -->
    <InicioInteractivo />
</Layout>