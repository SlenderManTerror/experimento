---
import { getTranslations } from '../../i18n/utils.js';
import Layout from '../../layouts/Layout.astro';
import Particulas from '../../components/Particulas.astro';
import HistoriaComponent from '../../components/Historia.astro';

const currentLang = 'eo';
const t = await getTranslations(currentLang);
---
<Layout 
    title={t.nav.historia} 
    description="En ĉi tiu paĝo vi lernos pri la interesa historio de la distriktoj, registaraj funkcioj kaj historiaj lokoj."
>
    <Particulas
        count={10}
        brightness="bright"
        size="medium"
        speed="normal"
    />
    <HistoriaComponent />
</Layout>