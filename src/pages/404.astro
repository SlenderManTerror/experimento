---

// src/pages/404.astro
import Header from '../components/Header.astro'
import favicon from '../assets/Esperanto(1).svg';
import '../styles/global.css';
const title = "404 - Página no encontrada";
const description = "La página que buscas no existe o ha sido movida. Explora los distritos de Pelee.";
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content={description}>
        <link rel="icon" type="image/svg+xml" href={favicon.src} />
    </head>
    <body>
        <Header />
        
        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

            <!-- Error Card -->
            <div class="bg-emerald-500 rounded-lg p-8 mb-8">
                <div class="text-center text-white">
                    <div class="text-8xl font-bold mb-4">404</div>
                    <h2 class="text-2xl font-semibold mb-4">¡Oops! Esta página no existe</h2>
                    <p class="text-emerald-100 mb-6">
                        La página que estás buscando no se encuentra disponible o ha sido movida.
                        <br>
                        Te sugerimos volver al inicio o explorar los distritos de Pelee.
                    </p>
                </div>
            </div>

            <!-- Suggestions Section -->
            <div class="bg-[var(--shadow)] rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold text-[var(--on-surface)] mb-4">¿Qué puedes hacer?</h3>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <h4 class="font-medium text-[var(--on-surface)] mb-2">Explorar secciones:</h4>
                        <ul class="space-y-2 text-sm text-[var(--on-surface)]">
                            <li>• <a href="/historia" class="text-[var(--primary)] hover:text-emerald-700">Historia</a></li>
                            <li>• <a href="/distritos" class="text-[var(--primary)] hover:text-emerald-700">Distritos</a></li>
                            <li>• <a href="/mapa" class="text-[var(--primary)] hover:text-emerald-700">Mapa</a></li>
                            <li>• <a href="/autoridades" class="text-[var(--primary)] hover:text-emerald-700">Autoridades</a></li>
                        </ul>
                    </div>

                    <div>
                        <h4 class="font-medium text-[var(--on-surface)] mb-2">Distritos populares:</h4>
                        <div class="flex flex-wrap gap-2">
                            <span class="bg-[var(--status)] text-[var(--textotabla)] px-3 py-1 rounded-full text-sm">Sed</span>
                            <span class="bg-[var(--status)] text-[var(--textotabla)] px-3 py-1 rounded-full text-sm">Captan</span>
                            <span class="bg-[var(--status)] text-[var(--textotabla)] px-3 py-1 rounded-full text-sm">Kondado</span>
                            <span class="bg-[var(--status)] text-[var(--textotabla)] px-3 py-1 rounded-full text-sm">Real</span>
                        </div>
                    </div>
                </div>
            </div>

           <!-- Back Button -->
            <div class="text-center mt-8">
                <button 
                    id="backButton"
                    class="group inline-flex items-center gap-2 px-6 py-3 bg-white hover:bg-emerald-50 text-emerald-600 hover:text-emerald-700 font-medium rounded-lg border-2 border-emerald-200 hover:border-emerald-300 transition-all duration-300 shadow-sm hover:shadow-md transform hover:scale-105"
                >
                    <span class="transform group-hover:-translate-x-1 transition-transform duration-300">←</span>
                    Volver a la página anterior
                </button>
            </div>

            <script>
                const backButton = document.getElementById('backButton');
                if (backButton) {
                    backButton.addEventListener('click', function() {
                        // Añadir efecto visual al hacer click
                        this.classList.add('animate-pulse');
                        
                        // Verificar si hay historial
                        if (window.history.length > 1) {
                            history.back();
                        } else {
                            // Si no hay historial, ir al inicio
                            window.location.href = '/';
                        }
                        
                        // Remover la animación después de un momento
                        setTimeout(() => {
                            this.classList.remove('animate-pulse');
                        }, 300);
                    });
                }
            </script>
        </main>
    </body>
</html>