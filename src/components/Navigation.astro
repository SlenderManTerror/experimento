---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { getTranslations } from '../i18n/utils.js';

const currentLang = Astro.currentLocale || 'es';
const t = await getTranslations(currentLang);
---

<nav class="bg-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between h-16">
      <div class="flex space-x-8">
        <a 
          href={getRelativeLocaleUrl(currentLang, '/')}
          class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 transition-colors"
        >
          {t.nav.home}
        </a>
        <a 
          href={getRelativeLocaleUrl(currentLang, '/about')}
          class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 transition-colors"
        >
          {t.nav.about}
        </a>
        <a 
          href={getRelativeLocaleUrl(currentLang, '/contact')}
          class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 transition-colors"
        >
          {t.nav.contact}
        </a>
      </div>
    </div>
  </div>
</nav>