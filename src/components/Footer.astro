        </div>
      </div>

      <!-- Navigation Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Navegación</h3>
        <ul class="space-y-2">
          <li><a href="/historia" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Historia</a></li>
          <li><a href="/distritos" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Distritos</a></li>
          <li><a href="/mapa" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Mapa</a></li>
          <li><a href="/autoridades" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Autoridades</a></li>
        </ul>
      </div>

      <!-- Information Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Información</h3>
        <ul class="space-y-2">
          <li><a href="/contacto" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Contacto</a></li>
          <li><a href="/eventos" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Eventos</a></li>
          <li><a href="/noticias" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Noticias</a></li>
          <li><a href="/turismo" class="text-gray-300 hover:text-green-400 transition-colors duration-300">Turismo</a></li>
        </ul>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-700 mb-8"></div>

    <!-- Bottom Section -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="text-gray-400 text-sm mb-4 md:mb-0">
        © {currentYear} Pelee. Todos los derechos reservados.
      </div>
      <div class="flex space-x-6 text-sm">
        <a href="/privacidad" class="text-gray-400 hover:text-green-400 transition-colors duration-300">
          Política de Privacidad
        </a>
        <a href="/terminos" class="text-gray-400 hover:text-green-400 transition-colors duration-300">
          Términos de Uso
        </a>
        <a href="/cookies" class="text-gray-400 hover:text-green-400 transition-colors duration-300">
          Cookies
        </a>
      </div>
    </div>
  </div>
</footer>