---
import '../styles/global.css';
---

<header class="flex justify-between items-center px-6 py-4 bg-white border-b border-gray-200 shadow-sm">
    <div class="logo">
        <a href="/" class="text-3xl font-bold text-[var(--primary)] hover:text-green-400 transition-colors">
            <p class="text-3xl font-bold">Pelee</p>
        </a>
    </div>
    <nav>
        <ul class="flex space-x-8">
            <li>
                <a href="/historia" class="text-[var(--primary)] hover:text-green-600 font-medium px-3 py-2 rounded-md hover:bg-green-50 transition-all">
                    Historia
                </a>
            </li>
            <li>
                <a href="/distritos" class="text-[var(--primary)] hover:text-green-600 font-medium px-3 py-2 rounded-md hover:bg-green-50 transition-all">
                    Distritos
                </a>
            </li>
            <li>
                <a href="/mapa" class="text-[var(--primary)] hover:text-green-600 font-medium px-3 py-2 rounded-md hover:bg-green-50 transition-all">
                    Mapa
                </a>
            </li>
            <li>
                <a href="/autoridades" class="text-[var(--primary)] hover:text-green-600 font-medium px-3 py-2 rounded-md hover:bg-green-50 transition-all">
                    Autoridades
                </a>
            </li>
        </ul>
    </nav>
</header>